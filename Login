  <script>
    // --------- Helper ‡πÄ‡∏•‡∏∑‡πà‡∏≠‡∏ô‡∏´‡∏ô‡πâ‡∏≤‡∏à‡∏≠‡πÑ‡∏õ‡∏¢‡∏±‡∏á section ----------
    function scrollToSection(id){
      const el = document.getElementById(id);
      if(el){
        el.scrollIntoView({behavior:'smooth',block:'start'});
      }
    }

    // --------- ‡∏à‡∏±‡∏î‡∏Å‡∏≤‡∏£ users ‡∏î‡πâ‡∏ß‡∏¢ localStorage ----------
    const STORAGE_KEY = "fa-demo-users";
    const USER_REQUESTS_KEY = "fa-user-requests"; // ‡πÄ‡∏Å‡πá‡∏ö‡∏Ñ‡∏≥‡∏Ç‡∏≠‡πÉ‡∏´‡πâ admin ‡∏≠‡∏ô‡∏∏‡∏°‡∏±‡∏ï‡∏¥

    function loadUsers(){
      try{
        const raw = localStorage.getItem(STORAGE_KEY);
        if(!raw){
          // ‡∏ñ‡πâ‡∏≤‡∏¢‡∏±‡∏á‡πÑ‡∏°‡πà‡∏°‡∏µ ‡πÉ‡∏´‡πâ seed ‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏ï‡∏±‡∏ß‡∏≠‡∏¢‡πà‡∏≤‡∏á
          const seed = [
            { email:"somchai@example.com", password:"123456", status:"approved" },
            { email:"suda@example.com",   password:"abcdef", status:"pending"  }
          ];
          localStorage.setItem(STORAGE_KEY, JSON.stringify(seed));
          return seed;
        }
        return JSON.parse(raw);
      }catch(e){
        console.warn("‡πÇ‡∏´‡∏•‡∏î users ‡πÑ‡∏°‡πà‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à", e);
        return [];
      }
    }

    function saveUsers(users){
      try{
        localStorage.setItem(STORAGE_KEY, JSON.stringify(users));
      }catch(e){
        console.warn("‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å users ‡πÑ‡∏°‡πà‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à", e);
      }
    }

    function loadUserRequests(){
      try{
        const raw = localStorage.getItem(USER_REQUESTS_KEY);
        if(!raw) return [];
        return JSON.parse(raw);
      }catch(e){
        console.warn("‡πÇ‡∏´‡∏•‡∏î fa-user-requests ‡πÑ‡∏°‡πà‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à", e);
        return [];
      }
    }

    function saveUserRequests(requests){
      try{
        localStorage.setItem(USER_REQUESTS_KEY, JSON.stringify(requests));
      }catch(e){
        console.warn("‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å fa-user-requests ‡πÑ‡∏°‡πà‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à", e);
      }
    }

    let users = loadUsers();
    let userRequests = loadUserRequests();

    // --------- ‡πÄ‡∏Ç‡πâ‡∏≤‡∏™‡∏π‡πà‡∏£‡∏∞‡∏ö‡∏ö ----------
    document.getElementById("loginForm").addEventListener("submit", function(event){
      event.preventDefault();
      const email = document.getElementById("loginEmail").value.trim();
      const password = document.getElementById("loginPassword").value;
      const msg = document.getElementById("loginMessage");
      msg.className = "msg";

